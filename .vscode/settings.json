{
  "editor.tabSize": 2,
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "files.associations": {
    "*.wxss": "css",
    "*.wxml": "wxml",
    "*.wxs": "javascript"
  },
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma"
  },
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "windicss.sortOnSave": true,
  "windicss.includeLanguages": {
    "*.wxml": "html"
  },
  "eslint.workingDirectories": [
    {
      "mode": "auto"
    }
  ]
}
