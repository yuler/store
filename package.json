{
  "name": "miniprogram-ts-quickstart",
  "version": "0.1.0",
  "description": "A wechat miniprogram for mini store",
  "keywords": [],
  "author": "is.yuler@gmail.com",
  "license": "MIT",
  "scripts": {
    "postinstall": "husky install",
    "build": "npm run build:ts & npm run build:tw && npm run build:replace",
    "build:ts": "tsc",
    "build:tw": "windicss './**/*.wxml' -f windi.config.js miniprogram/app.wxss",
    "build:replace": "replace-in-files --string='* {' --replacement=':root {' ./miniprogram/app.wxss",
    "prettier": "prettier --write \"**/*.{js,ts,sjs,json,wxml,wxss,md}\"",
    "dev": "node scripts/dev",
    "deploy": "node scripts/deploy"
  },
  "lint-staged": {
    "**/*.{js,ts,sjs,json,wxml,wxss,md}": "npm run prettier"
  },
  "dependencies": {},
  "devDependencies": {
    "chokidar": "^3.5.1",
    "husky": "^5.1.1",
    "lint-staged": "^10.5.4",
    "miniprogram-api-typings": "^3.2.3",
    "miniprogram-ci": "^1.0.98",
    "prettier": "^2.2.1",
    "typescript": "^4.2.2"
  }
}
