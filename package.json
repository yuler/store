{
	"private": true,
	"version": "0.1.0",
	"workspaces": [
		"mp",
		"mp-cloud",
		"tcb"
	],
	"scripts": {
		"postinstall": "husky install",
		"dev:admin": "(cd admin && yarn dev)",
		"build:admin": "(cd admin && yarn build)",
		"test": "xo && npm run-p build:**",
		"prettier": "prettier --write \"**/*.{js,ts,sjs,json,wxml,wxss,md}\""
	},
	"lint-staged": {
		"**/*.{js,ts,sjs,json,wxml,wxss,md}": "xo --fix"
	},
	"devDependencies": {
		"@types/node": "^15.6.1",
		"@yuler/tsconfig": "^0.2.0",
		"chokidar": "^3.5.1",
		"eslint-config-xo-typescript": "^0.41.1",
		"husky": "^5.1.1",
		"lint-staged": "^10.5.4",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.2.1",
		"typescript": "^4.2.2",
		"windicss": "^3.0.4",
		"xo": "^0.40.1"
	},
	"xo": {
		"rules": {
			"new-cap": "off",
			"unicorn/prefer-module": "off"
		}
	}
}
