{
	"name": "store",
	"version": "0.1.0",
	"description": "A wechat miniprogram for mini store",
	"keywords": [],
	"author": "is.yuler@gmail.com",
	"license": "MIT",
	"type": "module",
	"scripts": {
		"postinstall": "husky install",
		"test": "xo && npm run build",
		"build": "npm run build:ts && npm run build:css",
		"build:ts": "tsc",
		"build:css": "windicss 'mp/**/*.wxml' -f mp/windi.config.cjs -o mp/app.wxss",
		"prettier": "prettier --write \"**/*.{js,ts,sjs,json,wxml,wxss,md}\"",
		"mp:dev": "node scripts/dev",
		"mp:upload": "node scripts/upload.cjs"
	},
	"lint-staged": {
		"**/*.{js,ts,sjs,json,wxml,wxss,md}": "xo --fix"
	},
	"devDependencies": {
		"@yuler/tsconfig": "^0.2.0",
		"@yuler/utils": "^0.1.2",
		"chokidar": "^3.5.1",
		"dotenv": "^10.0.0",
		"eslint-config-xo-typescript": "^0.41.1",
		"husky": "^5.1.1",
		"lint-staged": "^10.5.4",
		"miniprogram-api-typings": "^3.3.2",
		"miniprogram-ci": "^1.0.98",
		"prettier": "^2.2.1",
		"typescript": "^4.2.2",
		"windicss": "^3.0.4",
		"xo": "^0.40.1"
	},
	"xo": {
		"rules": {
			"new-cap": "off",
			"unicorn/prefer-module": "off"
		}
	}
}
