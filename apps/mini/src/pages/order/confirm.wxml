        </view>

        <!-- Order Info Block -->
        <view class="bg-white rounded mt-2 p-4">
            <view class="flex items-center">
                <app-icon name="volume" />
                <view class="text-xs ml-1 text-gray-400">选购饮品，注意选对冰度和甜度</view>
            </view>
            <view class="flex mt-2">
                <image class="rounded h-12 w-12" mode="widthFix"
                    src="https://go.cdn.heytea.com/storage/ad/2022/03/18/bdb955612e9b444f958eab08e2ea2fcf.jpg-app" />
                <view class="flex-1 ml-2">
                    <view class="text-sm">芒芒xx</view>
                    <view class="text-xs text-gray-400">xxxxxx</view>
                </view>
                <view>
                    <view class="text-sm">¥ 19</view>
                    <view class="text-xs text-gray-400">x 1</view>
                </view>
            </view>
        </view>

        <!-- Order Coupon & Remark -->
        <view class="bg-white rounded mt-2 p-4">
            <view class="flex items-center justify-between">
                <view class="text-sm">优惠券</view>
                <view class="flex items-center ">
                    <view class="flex-1 mr-2 text-xs text-gray-400">开发中...</view>
                    <app-icon name="chevron-right" />
                </view>
            </view>
            <view class="flex mt-4 items-center justify-between">
                <view class="text-sm">订单备注</view>
                <view class="flex items-center ">
                    <view class="flex-1 mr-2 text-xs text-gray-400">口味、包装要求等</view>
                    <app-icon name="chevron-right" />
                </view>
            </view>
        </view>

        <view class="bg-white rounded flex mt-2 text-sm p-4 justify-between">
            <view>支付方式</view>
            <view>微信支付</view>
        </view>
    </view>
