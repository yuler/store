{
    "$schema": "http://json.schemastore.org/prettierrc",
    "trailingComma": "all",
    "singleQuote": true,
    "semi": false,
    "useTabs": true,
    "tabWidth": 4,
    "arrowParens": "avoid",
    "bracketSpacing": false,
    "overrides": [
        {
            "files": [
                "*.yml",
                "*.yaml"
            ],
            "options": {
                "useTabs": false,
                "tabWidth": 2
            }
        }
    ]
}